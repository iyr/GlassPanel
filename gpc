#!/bin/bash

#Vanilla Console Resolution is 80 Columns by 22 Rows (mostly).

#Remove temporary motd, if one already exists.
rm /tmp/.tmpmotd

#Detect Initial Setup
USER=$(whoami)

SETTINGS="/tmp/.gpc_settings"
if [ -f "$SETTINGS" ]
	then
		echo "Configuration file detected!"
		echo "Reading settings..."
		
	else
		echo "No configuration file found!"
		echo "Generating settings file..."
		#Generate Tweakable Settings file
		echo "USER=$USER" >> /tmp/.gpc_settings
		echo "#Adjust settings for color coding; below moderate is green, below critical is yellow and above is red" >> /tmp/.gpc_settings
		echo "#Memory Settings:" >> /tmp/.gpc_settings
		echo "MODERATE_MEM=60" >> /tmp/.gpc_settings
		echo "CRITICAL_MEM=80" >> /tmp/.gpc_settings
		echo "#CPU Settings:" >> /tmp/.gpc_settings
		echo "MODERATE_CPU=60" >> /tmp/.gpc_settings
		echo "CRITICAL_CPU=80" >> /tmp/.gpc_settings
		echo " " >> /tmp/.gpc_settings
		echo "break"
		echo "#Allows you to append the status of selected services to the motd (none enabled by default)" >> /tmp/.gpc_settings
		echo "#Usage: SERVICE \"ServiceName\" \"ServiceAlias\" (no spaces in alias)" >> /tmp/.gpc_settings
		echo "#Example: SERVICE NetworkManager Networking" >> /tmp/.gpc_settings
		echo " " >> /tmp/.gpc_settings
		echo "#Environment Settings, do not edit." >> /tmp/.gpc_settings
fi


#Print the status of a service:
NM_STATUS=$(service NetworkManager status | awk 'NR == 3 {print $2}')
if [ $NM_STATUS = "active" ]
	then
	echo -e "[ \e[0;32mNetworking\e[0m ]" >> /tmp/.tmpmotd
	else
	echo -e "[ \e[0;31mNetworking\e[0m ]" >> /tmp/.tmpmotd
fi

#Detect Internet availability:
GOOGLE_STATUS=$(ping -c4 google.com | awk 'NR == 8 {print $6}' | cut -c1)
if [ $GOOGLE_STATUS -eq 0 ]
	then
	INT_STATUS="true"
	echo -e "[ \e[0;32mINT\e[0m ]" >> /tmp/.tmpmotd
	elif [ $GOOGLE_STATUS -gt 0  ]
		then
		INT_STATUS="false"
		echo -e "[ \e[1;33mINT\e[0m ]" >> /tmp/.tmpmotd
	else
	INT_STATUS="false"
	echo -e "[ \e[0;31mINT\e[0m ]" >> /tmp/.tmpmotd
fi

#Calculates the system memory usage as a rounded integer percentage and prints to a log
AVE_MEM=$(free | awk 'NR == 3 {print $3} NR == 2 {print $2}' | paste -sd" " | awk 'NR ==1 {print $2/$1*100}' | awk '{printf("%d\n",$1 + 0.5)}')
if [ $AVE_MEM -lt 60 ]
	then
	echo -e "[ \e[0;32mRAM\e[0m ][ \e[0;32m%$AVE_MEM\e[0m memory in use. ]" >> /tmp/.tmpmotd
	
	elif [ $AVE_MEM -ge 60 -a $AVE_MEM -lt 80 ]
	then
	echo -e "[ \e[1;33mRAM\e[0m ][ \e[1;33m%$AVE_MEM\e[0m memory in use. ]" >> /tmp/.tmpmotd
	
	else
	echo -e "[ \e[0;31mRAM\e[0m ][ \e[0;31m%$AVE_MEM\e[0m memory in use. ]" >> /tmp/.tmpmotd
fi

CUR_CPU=$(top -bn1 | grep "Cpu(s)" | sed "s/.*, *\([0-9.]*\)%* id.*/\1/" | awk '{print $1}' | awk '{printf("%d\n",$1 + 0.5)}')
if [ $CUR_CPU -lt 60 ]
        then
        echo -e "[ \e[0;32mCPU\e[0m ][ \e[0;32m%$CUR_CPU\e[0m CPU in use. ]" >> /tmp/.tmpmotd

        elif [ $CUR_CPU -ge 60 -a $CUR_CPU -lt 80 ]
        then
	echo -e "[ \e[1;33mCPU\e[0m ][ \e[1;33m%$CUR_CPU\e[0m CPU in use. ]" >> /tmp/.tmpmotd

        else
        echo -e "[ \e[0;31mCPU\e[0m ][ \e[0;31m%$CUR_CPU\e[0m CPU in use. ]" >> /tmp/.tmpmotd
fi


#Determine how many (if any) updates are available (yum only).
if [ $INT_STATUS = "false" ]
	then
	echo -e "[ \e[0;31mYUM\e[0m ][ No connection to internet. ]" >> /tmp/.tmpmotd
	else
		NUM_UPDATES=$(yum check-update | grep -c "updates")
		if [ $NUM_UPDATES -ne 0 ]
			then
			echo -e "[ \e[1;33mYUM\e[0m ][ $NUM_UPDATES updates available. ]" >> /tmp/.tmpmotd
			else
			echo -e "[ \e[0;32mYUM\e[0m ][ $NUM_UPDATES updates available, System is up to date. ]" >> /tmp/.tmpmotd
		fi
fi

cat /tmp/.tmpmotd
